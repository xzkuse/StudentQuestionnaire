<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/listview_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_adv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"
                android:background="@android:color/holo_red_dark"/>

            <LinearLayout
                android:weightSum="10"
                android:background="#33000000"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="35dip">
                <TextView
                    android:layout_weight="8"
                    android:id="@+id/tv_pager_title"
                    android:text=""
                    android:paddingLeft="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color"
                    android:layout_width="0dp" android:layout_height="35dip"/>

                <!--用来动态添加轮播小点-->
                <LinearLayout
                    android:id="@+id/lineLayout_dot"
                    android:layout_weight="2"
                    android:gravity="center|right"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:orientation="horizontal"
                    android:layout_width="0dp" android:layout_height="match_parent">
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#f5cda3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_read"
                style="@style/TopButtonStyle"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/read_red"
                android:text="@string/button_read" />

            <Button
                android:id="@+id/btn_write"
                style="@style/TopButtonStyle"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/write_gray"
                android:text="@string/button_write" />

            <Button
                android:id="@+id/btn_lock"
                style="@style/TopButtonStyle"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/lock_gray"
                android:text="@string/button_lock" />
        </LinearLayout>
        <!--<LinearLayout
            android:id="@+id/ll_chooseTag"
            style="@style/LinearTextImageStyle"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/tv_singleTag"
                style="@style/TextStyle"
                 android:text="选择标签"/>

            <ImageView
                android:id="@+id/iv_chooseBox"
                style="@style/ImageStyle"
                android:src="@drawable/pull" />
        </LinearLayout>-->

        <FrameLayout
            android:id="@+id/write_page_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

    </LinearLayout>

</ScrollView>