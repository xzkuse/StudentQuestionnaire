	border-radius: 5rpx;
	margin-top: 20rpx;
	padding: 15rpx 20rpx;
}
.datiContentChecked{
	display: block;
	background-color: #e7e8f4;
	border:2rpx solid #1296db;
	border-radius:5rpx;
	margin-top: 20rpx;
